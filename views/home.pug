doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="author", content="Alma Wettig")
    title Projekt
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH", crossorigin="anonymous")
    // Leaflet
    link(rel="stylesheet", href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css", integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=", crossorigin=)
    script(src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js", integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=", crossorigin=)
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container-fluid
        a.navbar-brand(href="#") Projekt
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarSupportedContent", aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link.active(aria-current="page", href="/") Dateneingabe
            li.nav-item
              a.nav-link(href="/map") Karten 
            li.nav-item
              a.nav-link(href="/impressum") Impressum 
    br
    .px-1.border.border-primary-subtle.border-3.rounded
      // Bootstrap-Tabs
      ul.nav.nav-tabs(role="tablist")
        li.nav-item
          a.nav-link.active(href="#file-upload", id="file-upload-tab", data-bs-toggle="tab", role="tab", aria-controls="file-upload", aria-selected="true") Datei-Upload
        li.nav-item
          a.nav-link(href="#form-input", id="form-input-tab", data-bs-toggle="tab", role="tab", aria-controls="form-input", aria-selected="false") Formular-Eingabe
        li.nav-item
          a.nav-link(href="#text-input", id="text-input-tab", data-bs-toggle="tab", role="tab", aria-controls="text-input", aria-selected="false") Texteingabe

      // Upload
      .tab-content
        #file-upload.tab-pane.fade.show.active(role="tabpanel", aria-labelledby="file-upload-tab")
          form(action="/", method="post", enctype="multipart/form-data")
            h3.display-9 Json-Datei hochladen:
            input#json.form-control(name="input_data", type="file",accept=".json,.geojson", required)
            br
            #jsonErr.d-none.bg-danger.rounded.text-light.px-1
              p Die ausgewählte Datei ist keine (Geo-)JSON-Datei oder enthält ungültige Daten!
            button.btn.btn-primary(type="submit") Absenden
          
        //Formular
        #form-input.tab-pane.fade(role="tabpanel", aria-labelledby="form-input-tab")
          h3.display-9 Eingabeformular
          form(action="/action_page.php", method="post")
            p Bitte geben Sie nun die Daten zu der betreffenden Stadt ein:
            .input-group.input-group-sm.mb-3
              .input-group-prepend
                span.input-group-text Name
              input#fname.form-control(type="text", name="name", aria-label="Name", aria-describedby="inputGroup-sizing-sm", required)
            .input-group.input-group-sm.mb-3
              .input-group-prepend
                span.input-group-text Breitengrad
              input#l_b.form-control(type="text", name="latitude", aria-label="Breitengrad", aria-describedby="inputGroup-sizing-sm", required)
            .input-group.input-group-sm.mb-3
              .input-group-prepend
                span.input-group-text Längengrad
              input#l_l.form-control(type="text", name="longitude", aria-label="Längengrad", aria-describedby="inputGroup-sizing-sm", required)
            .input-group.input-group-sm.mb-3
              .input-group-prepend
                span.input-group-text URL
              input#l_l.form-control(type="text", name="URL", aria-label="URL", aria-describedby="inputGroup-sizing-sm", optional)
            button.btn.btn-primary(type="submit") Absenden

        //Text 
        #text-input.tab-pane.fade(role="tabpanel", aria-labelledby="text-input-tab")
          form(action="/", method="post")
            .form-group
              label(for="text_input") Eingabe einer JSON-Datei als Text:
              textarea.form-control(id="text_input", name="input_data", rows="5", required)
            button.btn.btn-primary(type="submit") Absenden

    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js", integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r", crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js", integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy", crossorigin="anonymous")
